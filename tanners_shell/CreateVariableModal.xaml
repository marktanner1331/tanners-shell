<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="tanners_shell.CreateVariableModal"
        Title="Create Variable"
        Width="400" Height="450">
  <Grid RowDefinitions="auto,*,auto,auto">
    <DockPanel Grid.Row="0" Margin="5">
      <TextBlock Margin="5">Name:</TextBlock>
      <TextBox Name="name" IsReadOnly="False"></TextBox>
    </DockPanel>
    <TextBox Name="value" AcceptsReturn="True" Grid.Row="1" Margin="5" IsReadOnly="False"></TextBox>
    <TextBlock TextAlignment="Right" Margin="0,0,5,0" Name="error" Grid.Row="2" Foreground="Red" IsVisible="False"></TextBlock>
    <DockPanel Grid.Row="3" LastChildFill="False">
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
        <Button Margin="5" Click="onSelectFileClick">Select File</Button>
        <Button Margin="5" Click="onSelectFolderClick">Select Folder</Button>
      </StackPanel>
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
        <Button Margin="5" Click="onCancelClick">Cancel</Button>
        <Button Margin="5" Click="onSaveClick">Save</Button>
      </StackPanel>
    </DockPanel>
  </Grid>
</Window>
