<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="tanners_shell.CommandBox">
  <Grid ColumnDefinitions="*,auto">
    <TextBox Classes="global" Grid.Column="0" Name="value" BorderBrush="Black" BorderThickness="1" Margin="5" IsReadOnly="False"></TextBox>
    <Button Grid.Column="1" Margin="5" Click="onRunClick">Run</Button>
  </Grid>
</UserControl>
